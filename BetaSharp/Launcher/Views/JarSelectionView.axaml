<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BetaSharp.Launcher.ViewModels"
             x:Class="BetaSharp.Launcher.Views.JarSelectionView"
             x:DataType="vm:JarSelectionViewModel">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Margin="20,20,20,0" HorizontalAlignment="Center">
            <TextBlock Text="JAR Selection" 
                       FontSize="24"/>
        </StackPanel>
        
        <StackPanel Margin="20" Spacing="15">
            <TextBlock Text="{Binding StatusText}" 
                       HorizontalAlignment="Center"/>
            
            <Button Content="Select JAR File" 
                    HorizontalAlignment="Stretch"/>
            
            <Button Content="Back to Login" 
                    HorizontalAlignment="Stretch"
                    Command="{Binding NavigateToLoginCommand}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
