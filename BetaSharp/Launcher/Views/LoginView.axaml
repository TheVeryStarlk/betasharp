<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BetaSharp.Launcher.ViewModels"
             x:Class="BetaSharp.Launcher.Views.LoginView"
             x:DataType="vm:LoginViewModel">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Margin="20,20,20,0" HorizontalAlignment="Center">
            <TextBlock Text="BetaSharp" 
                       FontSize="24"/>
        </StackPanel>
        
        <StackPanel Margin="20" Spacing="15">
            <TextBlock Text="{Binding StatusText}" 
                       HorizontalAlignment="Center"/>
            
            <Button Content="Login with Microsoft" 
                    HorizontalAlignment="Stretch"/>
            
            <Button Content="Provide b1.7.3.jar" 
                    HorizontalAlignment="Stretch"
                    Command="{Binding NavigateToJarSelectionCommand}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
